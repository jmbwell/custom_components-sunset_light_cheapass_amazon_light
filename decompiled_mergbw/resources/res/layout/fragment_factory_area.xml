<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginTop="10dp">
            <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/tv_factory_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:layout_marginStart="15dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/layout_site_list" android:layout_width="60dp" android:layout_height="28dp" android:layout_marginEnd="15dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_site" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="9dp"/>
                <ImageView android:layout_gravity="center_vertical" android:layout_width="26dp" android:layout_height="26dp" android:src="@mipmap/icon_arrow_down_gray" android:layout_marginStart="4dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.youth.banner.Banner android:id="@+id/view_banner" android:layout_width="match_parent" android:layout_height="180dp" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/new_product" android:alpha="0.8" android:layout_marginStart="15dp"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_new_product" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginBottom="15dp" android:layout_weight="1" android:layout_marginStart="5dp" android:layout_marginEnd="15dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
